/*counting even numbers in a list*/

#include <iostream>
using namespace std;

const int mon [] = {2,3,4,5,6,12,3,4,2,1};

int main()
{
	int cnt=0;
	int size_arr = sizeof (mon) / sizeof (mon[0]);
	for (int i=0; i<size_arr; i++)
	{
		if (mon[i] < 3 || mon[i] == 12)
		{
			cnt++;
		}
	}
	cout << cnt;
	return 0;
}
